{
  "parser": "babel-eslint",
  "extends": [
    "plugin:react/recommended",
    "plugin:flowtype/recommended"
  ],
  "env": {
    "jest": true
  },
  "plugins": [
    "react",
    "flowtype"
  ],
  "rules": {
    "eqeqeq": 0,
    "no-unused-vars": [
      "error", {
        "argsIgnorePattern": "^_"
      }
    ],
    "import/no-webpack-loader-syntax": 0,
    "react/prop-types": 0,
    "react/display-name": 0,
    "flowtype/require-valid-file-annotation": [
      2,
      "always", {
        "annotationStyle": "line"
      }
    ]
  }
}
