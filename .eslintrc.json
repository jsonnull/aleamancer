{
  "parser": "babel-eslint",
  "extends": ["plugin:react/recommended", "plugin:flowtype/recommended"],
  "env": {
    "jest": true
  },
  "plugins": ["react", "flowtype"],
  "rules": {
    "eqeqeq": "off",
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_"
      }
    ],
    "react/prop-types": "off",
    "react/display-name": "off",
    "flowtype/require-valid-file-annotation": [
      "error",
      "always",
      {
        "annotationStyle": "line"
      }
    ]
  }
}
